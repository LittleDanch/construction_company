@page
@model construction_company.Pages.Brigadess.CreateModel

@{
    ViewData["Title"] = "Добавить бригаду";
}

<h1>Добавить новую запись</h1>

<h4>Бригада</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brigades.Staff1ID" class="control-label"></label>
                <input asp-for="Brigades.Staff1ID" class="form-control" />
                <span asp-validation-for="Brigades.Staff1ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brigades.Staff2ID" class="control-label"></label>
                <input asp-for="Brigades.Staff2ID" class="form-control" />
                <span asp-validation-for="Brigades.Staff2ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brigades.Staff3ID" class="control-label"></label>
                <input asp-for="Brigades.Staff3ID" class="form-control" />
                <span asp-validation-for="Brigades.Staff3ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
