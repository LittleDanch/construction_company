@page
@model construction_company.Pages.ZF.Requests.Human_Resources_DepartmentModel
@{
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FullName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Staff[0].position)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>

                <td>
                    @{
                        try
                        {
                            @Model.position.First(r => r.ID == item.positionID).Name_Position
                        }
                        catch
                        {
                            <p>нет</p>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>